{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true,
    "types": [
      "node",
      "jest"
    ],
    "noImplicitAny": true
  },
  "include": [
    "src/**/*.ts",
    "singleton.ts",
    // "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}